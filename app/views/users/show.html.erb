<div class="content" id="user_show">
  <div class="user-top">
    <div class="fr">
      <% if @friend.blank?%>
        <%= link_to "Follow #{@user.first_name}", create_friends_path(:id => @user.id)%>
      <% else%>
        <%= link_to "Stop Following", destroy_friends_path(:id => @user.id), :confirm => "Stop following?", :method => :delete %>
      <%end%>
    </div>
    <div>
      <span class="user-name"><%= @user.full_name %></span>
    </div>
  </div>

  <% if can? :update, @user %>
    <div class="fr">
      <%= link_to 'Edit', edit_user_path(@current_user) %>
    </div>
  <%end%>

  <div class="user-about">
    <div class="about-location">
      <div class="user-subsection">
        <span>Location</span>
      </div>
      <div class="info-subection fr">
        <span> <%= @user.city%>, <%= @user.state_id %>
      </div>
    </div>
    <div class="about-info">
      <div class="user-subsection">
        <span>About</span>
      </div>
      <div class="info-subsection fr">
        <span><%= @user.sex %> </span>
        <span><%= @user.birth_date %></span>
      </div>
    </div>
  </div>
  <hr/>

  <hr/>
  <p>
    <b>Posts by You: </b>
    <%= render :partial => "posts/index"%>
  </p>


  <hr/>

  <p>
    <b>Trends: </b>
    <%= render :partial => "trends/index" %>
  </p>

</div>