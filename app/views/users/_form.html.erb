<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :domain %><br />
    <%= f.text_field :domain %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state_id %><br />
    <%= f.number_field :state_id %>
  </div>
  <div class="field">
    <%= f.label :sex %><br />
    <%= f.collection_select(:sex, User::SEX, :to_s, :humanize, :prompt => true) %>
  </div>
  <div class="field">
    <%= f.label :birth_day %><br />
    <%= f.number_field :birth_day %>
  </div>
  <div class="field">
    <%= f.label :birth_month %><br />
    <%= f.number_field :birth_month %>
  </div>
  <% if current_user.role == 'admin'%>
    <div class="field">
      <%= f.label :role %><br />
      <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
    </div>
  <%end%>
  <div class="field">
    <%= f.label :birth_year %><br />
    <%= f.number_field :birth_year %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
