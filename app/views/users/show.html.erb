<div class="content" id="user_show">
  <div class="user-top">
    <div class="fr">
      <% if can? :update, @user %>
        <div class="fr">
          <%= link_to 'Edit', edit_user_path(@current_user) %>
        </div>
      <%else%>
        <% if @friend.blank?%>
          <div class="button">
            <%= link_to "Follow #{@user.first_name}", create_friends_path(:id => @user.id)%>
          </div>
        <% else%>
          <div class="button">
            <%= link_to "Stop Following", destroy_friends_path(:id => @user.id), :confirm => "Stop following?", :method => :delete %>
          </div>
        <%end%>
      <%end%>
    </div>
    <div>
      <div class="fl">
        <%= image_tag ("/assets/Profile.png"), :style =>"height:100px; width:80px;" %>
      </div>
      <div class="fl">
        <div class="first-name"><%= @user.first_name %></div><br/>
        <div class="last-name"><%= @user.last_name %> </div>
      </div>
      <div class="clear"></div>
    </div>
  </div>

  <div class="user-about">
    <div class="about-location">
      <div class="user-subsection">
        <span>Location</span>
      </div>
      <div class="info-subection fr">
        <span> <%= @user.city%>, <%= @user.state_id %>
      </div>
    </div>
    <div class="about-info">
      <div class="user-subsection">
        <span>About</span>
      </div>
      <div class="info-subsection fr">
        <span><%= @user.sex %> </span>
        <span><%= @user.birth_date %></span>
      </div>
    </div>
  </div>

  <p>
    <b>Posts by You: </b>
    <%= render :partial => "posts/index"%>
  </p>

  <p>
    <b>Trends: </b>
    <%= render :partial => "trends/index" %>
  </p>

</div>