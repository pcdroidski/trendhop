<!-- Header -->
<div id="header_container">
  <div class="container_16">
    <div id="header">
      <header>

        <div class="grid_5 fl">
          <div class="logo_home">
           <%= link_to image_tag("/assets/Logo.png", :class=>"logo_link"), root_path %>
          </div>
        </div>
        <div class="grid_11 fl">
          <div class="home-nav">
            <%= link_to root_path, :class => "home-link" do %>
              <div class="link">
                Home
              </div>
            <%end%>
            <% if user_signed_in? %>
              <%= link_to user_path(current_user), :class => "home-link" do%>
                <div class="link">
                  Profile
                </div>
              <% end%>
            <%end%>
            <%= link_to blogs_path, :class => "home-link" do%>
              <div class="link">
                Blogs
              </div>
            <%end%>
            <%= link_to trends_path, :class => "home-link" do%>
              <div class="link">
                Trends
              </div>
            <%end%>
          </div>
        </div>

        </header>
    </div>
  </div>
</div>

<!-- End Header -->