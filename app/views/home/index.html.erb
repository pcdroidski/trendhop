<div class="content" id="posts">
  <div class="title"><span>Who's Trending What? </span> </div>
  <ul class="posts_list"><% @posts.each do |post| %>
    <li class="post">
      <div class="post_info fl">
        <h4 class="post_title"><%= link_to post.name, post_path(post) %></h4>
        <span>Category: <%= post.trend_category_id %> </span><br/>
        <span><%= pluralize (post.trend_count, "person is", "people are") %> trending this.</span><br/>
        <span><%= pluralize (post.blogs.count, "blog is", "blogs are") %> trending this.</span>
      </div>
      <div id="post_blogs" class="fl">
        <span class="subsection_title">Recent posts: </span>
        <ul class="post_blog">
          <% post.blogs.each do |blog| %>
          <li>  <%= link_to blog.title, blog_path(blog) %><br/></li>
          <% end%>
        </ul>
      </div>
      <div id="trend_hops" class="fl">
        <span class="subsection_title">Hop to a related trend: </span>
        <ul class="trend_hop">
          <% post.trends.each do |hop| %>
          <li>  <%= link_to hop.name, trend_path(hop.name) %><br/></li>
          <% end%>
        </ul>
      </div>
      <div class="clear"></div>
      <%#= link_to 'Show', trend %>
      <%#= link_to 'Edit', edit_trend_path(trend) %>
      <%#= link_to 'Destroy', trend, :confirm => 'Are you sure?', :method => :delete %>

    </li>
  <% end %>
  </ul>



</div>
