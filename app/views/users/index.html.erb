<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Domain</th>
    <th>First name</th>
    <th>Last name</th>
    <th>City</th>
    <th>State</th>
    <th>Sex</th>
    <th>Birth day</th>
    <th>Birth month</th>
    <th>Birth year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.domain %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.city %></td>
    <td><%= user.state_id %></td>
    <td><%= user.sex %></td>
    <td><%= user.birth_day %></td>
    <td><%= user.birth_month %></td>
    <td><%= user.birth_year %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

