<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Domain</th>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>Sex</th>
    <th>Birth Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.domain %></td>
    <td><%= user.full_name %></td>
    <td><%= user.city %></td>
    <td><%= user.state_id %></td>
    <td><%= user.sex %></td>
    <td><%= user.birth_date%></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

