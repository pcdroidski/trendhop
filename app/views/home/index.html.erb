<div class="content" id="posts">
  <div class="title"><span>Who's Trending What? </span> </div>
  <ul class="posts_list"><% @posts.each do |post| %>
    <li class="post">
      <div class="post_content">
        <div class="post_title"><%= link_to post.user.name, user_path(post.user), :id=>"name"%> is trending <%= raw(list_trends(post)) %></div> on <%= post.created_at.to_s(:mdy_dots)%>
        <div class="content"> <%= post.content %> </div>
            <div class="clear"></div>
      </div>
      <div class="post_info fl">
        <%#raise post.trends.classify.inspect%>
        <!-- <span>Category: <%#= post.category_id %> </span><br/> -->
        <span><%= pluralize (post.trends.count, "person is", "people are") %> trending this.</span>
      </div>
      <div class="trend_hops fl">
        <span class="subsection_title">Hop to a related trend: </span>
        <ul class="trend_hop">
          <% post.trends.each do |hop| %>
          <li id='hop'>  <%= link_to hop.name, trend_path(hop.name) %></li>
          <% end%>
        </ul>
      </div>
      <div class="clear"></div>
      <%#= link_to 'Show', trend %>
      <%#= link_to 'Edit', edit_trend_path(trend) %>
      <%#= link_to 'Destroy', trend, :confirm => 'Are you sure?', :method => :delete %>

    </li>
  <% end %>
  </ul>



</div>
