                <%#end%>
              <%#when 2%>
                <%#= link_to retrend_posts_path(:post_id => @post1.id) do%>
                  <div role="button" class="retrend-button">Re-Trend</div>
                <%# end%>
            <%#end%> -->
        </div>
        <div class="blog_content">
          <p><%= sanitize(raw(blog.summary), :tags => %w(p blockquote)) %></p>
        </div>
      </div>
      <% end %>
      <%end%>
  </div>
  <%end%>

</div>