<!-- Header -->
<div id="header_container">
  <div class="container_16">
    <div id="header">
      <header>

        <div class="grid_3 fl alpha">
          <div class="logo_home">
           <%= link_to image_tag("/assets/Logo.png", :class=>"logo_link"), root_path %>
          </div>
        </div>
        <% if user_signed_in?%>
        <div class="grid_8 fl">
          <div class="home-nav">
            <%= link_to root_path, :class => "home-link" do %>
              <div class="link">
                Home
              </div>
            <%end%>
            <% if user_signed_in? %>
              <%= link_to user_path(current_user), :class => "home-link" do%>
                <div class="link">
                  Profile
                </div>
              <% end%>
            <%end%>
            <%= link_to blogs_path, :class => "home-link" do%>
              <div class="link">
                Blogs
              </div>
            <%end%>
            <%= link_to trends_path, :class => "home-link" do%>
              <div class="link">
                Trends
              </div>
            <%end%>
          </div>
          <div class="clear"></div>
          <%= render :partial => "search/search"%>
        </div>
        <%end%>
        <%= render :partial =>"users/sessions/header"%>
        </header>
    </div>

    <div class="whats-trending" id="pop-down">
      <% if check_user? && params[:controller] != "as" %>
        <div>
          <span class="title">Share what's #trending!</span>
          <%= render :partial => "posts/post_from_anywhere" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
<div class="filler-header"></div>
<!-- End Header -->