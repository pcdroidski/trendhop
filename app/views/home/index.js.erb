$("#menu").html("<%= escape_javascript(render("menu")) %>");
$("#menuNav-left").hide();
$(document).ready(function(){
  button_L = 0;
  button_R = 10;

  $("#menuNav-left").hide();
     $("#menuNav-right").click(function() {
       $(".trends-list-container").animate({
         right: "+=" + '312px'
       }, 200);
       button_L = button_L + 1;
       button_R = button_R - 1;
       $("#menuNav-left").show();
       if (button_R < 4) {
         $("#menuNav-right").hide();
       } else {
         $("#menuNav-right").show();
       }
     });
     return $("#menuNav-left").click(function() {
       $(".trends-list-container").animate({
         right: "-=" + '312px'
       }, 200);
       button_L = button_L - 1;
       button_R = button_R + 1;
       if (button_L > 0) {
         $("#menuNav-left").show();
       } else {
         $("#menuNav-left").hide();
       }
       $("#menuNav-right").show();
     });
});
